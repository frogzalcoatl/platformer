{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "${command:cmake.cmakePath}",
            "args": [
                "--build",
                "${command:cmake.buildDirectory}",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Builds the Debug configuration."
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "${command:cmake.cmakePath}",
            "args": [
                "--build",
                "${command:cmake.buildDirectory}",
                "--config",
                "Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Builds the Release configuration."
        }
    ]
}